    },
    {
      "name": "http_request",
      "description": "Make HTTP request to external API",
      "endpoint": "/actions/http_request/execute",
      "method": "POST",
      "parameters": {
        "type": "object",
        "properties": {
          "agent_id": {
            "type": "string",
            "description": "Unique identifier for the agent"
          },
          "process_id": {
            "type": "string",
            "description": "Process identifier"
          },
          "blueprint_id": {
            "type": "string",
            "description": "Blueprint/template identifier"
          },
